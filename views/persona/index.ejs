<div class="container">
        <h2>personas registrados</h2>
        <a class="button" href="/persona/new"> Agregar Persona </a>
        <a class="button" href="/"> Regresar </a>
    
        <table class="table table-hover">
            <th>Cedula</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th colspan="2" class="text-center">Acciones</th>
            <%_.each(persona,function(persona){ %>
            <tr>
                <td><%=persona.cedula%></td>
                <td><%=persona.nombres%></td>
                <td><%=persona.apellidos%></td>
        
                <td>
                    <a href="/persona/show/<%=persona.id%>" class="btn btn-success btn-sm "> Ver Detalles</a>
                </td>
                <td>
                    <form action="/persona/destroy/<%=persona.id%>" method="POST" accept-charset="utf-8">
                        <input type="hidden" name="method" value="delete"/>
                        <input type="submit" class="btn btn-sm btn-danger" value="Eliminar"/>
                        <input type="hidden" name="_csrf" value="<%=_csrf%>"/>
    
                    </form>
                        
                
                </td>
            </tr>
    
        <%})%>
    
        </table>
    </div>