<div class="container">
        <h2>Materias</h2>
        <a class="button" href="/materia/new"> Agregar materia </a>
        <a class="button" href="/"> Regresar </a>
    
        <table class="table table-hover">
            <th>Nombre</th>
            <th>Codigo</th>
          
            <th colspan="2" class="text-center">Acciones</th>
            <%_.each(materia,function(materia){ %>
            <tr>
                <td><%=materia.nombre%></td>
                <td><%=materia.codigo%></td>
        
                <td>
                    <a href="/materia/show/<%=materia.id%>" class="btn btn-success btn-sm "> Ver Detalles</a>
                </td>
                <td>
                    <form action="/materia/destroy/<%=materia.id%>" method="POST" accept-charset="utf-8">
                        <input type="hidden" name="method" value="delete"/>
                        <input type="submit" class="btn btn-sm btn-danger" value="Eliminar"/>
                        <input type="hidden" name="_csrf" value="<%=_csrf%>"/>
    
                    </form>
                        
                
                </td>
            </tr>
    
        <%})%>
    
        </table>
    </div>