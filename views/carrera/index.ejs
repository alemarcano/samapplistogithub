<div class="container">
        <h2>Carreras de la Unimet</h2>
        <a class="button" href="/carrera/new"> Agregar materia </a>
        <a class="button" href="/"> Regresar </a>
    
        <table class="table table-hover">
            <th>Nombre</th>
       
          
            <th colspan="2" class="text-center">Acciones</th>
            <%_.each(carrera,function(carrera){ %>
            <tr>
                <td><%=carrera.nombre%></td>
               
        
                <td>
                    <a href="/carrera/show/<%=carrera.id%>" class="btn btn-success btn-sm "> Ver Detalles</a>
                </td>
                <td>
                    <form action="/carrera/destroy/<%=carrera.id%>" method="POST" accept-charset="utf-8">
                        <input type="hidden" name="method" value="delete"/>
                        <input type="submit" class="btn btn-sm btn-danger" value="Eliminar"/>
                        <input type="hidden" name="_csrf" value="<%=_csrf%>"/>
    
                    </form>
                        
                
                </td>
            </tr>
    
        <%})%>
    
        </table>
    </div>